<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/public_leave"
                android:tag="公假"
                android:textSize="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/prize_bg_red"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:text="公假"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="-1dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/sick_leave"
                android:tag="病假"
                android:textSize="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/prize_bg_red"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:text="病假"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="-1dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/thing_leave"
                android:tag="事假"
                android:textSize="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/prize_bg_red"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:text="事假"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="-1dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/dead_leave"
                android:tag="喪假"
                android:textSize="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/prize_bg_red"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:text="喪假"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="-1dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/absence"
                android:tag="缺席"
                android:textSize="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/prize_bg_red"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:text="缺席"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="-1dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/late"
                android:tag="遲到"
                android:textSize="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/prize_bg_red"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:text="遲到"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="-1dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/cutting"
                android:tag="曠課"
                android:textSize="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/prize_bg_red"
                android:textColor="@color/white"
                android:gravity="center"/>
            <TextView
                android:text="曠課"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="-1dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/list_attend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>
</LinearLayout>

