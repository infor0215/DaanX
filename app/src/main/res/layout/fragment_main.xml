<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_date"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="1.5%"
        card_view:cardCornerRadius="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="距離 統測 還有170天"
            android:textSize="25dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_thing"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        app:layout_heightPercent="27%"
        app:layout_marginTopPercent="12%"
        card_view:cardCornerRadius="4dp">

        <ImageView android:layout_width="match_parent"
            android:src="@color/green_500"
            android:layout_height="80dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:text="大事記"
            android:textSize="30dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_news"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        app:layout_heightPercent="27%"
        app:layout_marginTopPercent="40%"
        card_view:cardCornerRadius="4dp">

        <ImageView android:layout_width="match_parent"
            android:src="@color/yellow_800"
            android:layout_height="80dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:text="熱門消息"
            android:textSize="30dp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_discuss"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        app:layout_heightPercent="27%"
        app:layout_marginTopPercent="68%"
        card_view:cardCornerRadius="4dp">

        <ImageView android:layout_width="match_parent"
            android:src="@color/blue_300"
            android:layout_height="80dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:text="熱門討論"
            android:textSize="30dp" />

    </android.support.v7.widget.CardView>
</android.support.percent.PercentRelativeLayout>
